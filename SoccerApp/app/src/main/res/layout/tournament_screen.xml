<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/textView"
    android:weightSum="1"
    android:background="#ff006b05">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select A Team"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="#ffffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chicago"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/chicago_fire"
            android:textColor="#ff0011b7"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorado"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/colorado_rapids" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/columbus"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/columbus_crew" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dc"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dc_united" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dallas"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/fc_dallas" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/houston"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/houston_dynamo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/los_angeles"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/los_angeles_galaxy" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/montreal"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/montreal_impact" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_england"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/new_england_revolution" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_york_city"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/new_york_city_fc" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_york"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/new_york_red_bulls" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orlando"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/orlando_city_fc" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/philadelphia"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/philadelphia_union" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portland"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/portland_timbers" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/salt_lake"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/real_salt_lake" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/san_jose"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/san_jose_earthquakes" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seattle"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:background="@drawable/seattle_sounders_fc" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kansas_city"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:background="@drawable/sporting_kansas_city" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toronto"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/toronto_fc" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vancouver"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/vancouver_whitecaps_fc" />
    </RelativeLayout>

</LinearLayout>